RewriteEngine On
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule (.+) $1.php

<IfModule mod_php5.c>
    php_value include_path ".:/home/data.fm/www/inc:/usr/share/pear:/usr/share/php"
    php_value auto_prepend_file "runtime.php"
</IfModule>

<IfModule mod_fcgid.c>
    AddHandler fcgid-script .php
    AddHandler fcgid-script .py
    DirectoryIndex index.php
    FCGIWrapper "/usr/bin/php-cgi -c /srv/cloud/conf/" .php
    <Files *.php>
        Options +ExecCGI
    </Files>
    <Files *.py>
        Options +ExecCGI
    </Files>
</IfModule>
